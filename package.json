{
  "name": "screepsas",
  "version": "2.0.0",
  "description": "Screeps script & developing environment setup",
  "main": "index.js",
  "directories": {
    "lib": "src/lib"
  },
  "scripts": {
    "start": "multimeter",
    "lint": "eslint src/**/*.ts",
    "build": "rollup -c",
    "doc": "rm -f index.d.ts && tsc -p declaration.tsconfig.json",
    "push-main": "rollup -c --environment DEST:main",
    "push-pserver": "rollup -c --environment DEST:pserver",
    "push-sim": "rollup -c --environment DEST:sim",
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "rollup -c rollup.test-unit-config.js && mocha dist/test-unit.bundle.js",
    "test-integration": "npm run build && rollup -c rollup.test-integration-config.js && mocha dist/test-integration.bundle.js",
    "watch-main": "rollup -cw --environment DEST:main",
    "watch-pserver": "rollup -cw --environment DEST:pserver",
    "watch-sim": "rollup -cw --environment DEST:sim"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayoitsLuke/ScreepsAS.git"
  },
  "keywords": [
    "screeps",
    "typescript"
  ],
  "author": "ayoitsLuke",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "10.13.0",
    "mongodb": "3",
    "redis": "3"
  },
  "bugs": {
    "url": "https://github.com/ayoitsLuke/ScreepsAS/issues"
  },
  "homepage": "https://github.com/ayoitsLuke/ScreepsAS#readme",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/lodash": "3.10.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.17.9",
    "@types/screeps": "x",
    "@types/sinon": "^5.0.5",
    "@types/sinon-chai": "^3.2.0",
    "chai": "^4.2.0",
    "eslint": "x",
    "lodash": "3.10.1",
    "mocha": "^10.7.3",
    "prettier": "^1.19.1",
    "rollup": "^0.63.4",
    "rollup-plugin-buble": "^0.19.4",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-nodent": "^0.2.2",
    "rollup-plugin-screeps": "^0.1.2",
    "rollup-plugin-typescript2": "^0.25.3",
    "screeps-multimeter": "x",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "ts-node": "^7.0.1",
    "typescript": "x"
  },
  "dependencies": {
    "source-map": "~0.6.1"
  }
}
